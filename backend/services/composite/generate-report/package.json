{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "nodemon index.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.1",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "nunjucks": "^3.2.4",
    "playwright": "^1.56.0",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "api/**/*.js",
      "model/**/*.js"
    ],
    "coverageDirectory": "coverage"
  }
}
