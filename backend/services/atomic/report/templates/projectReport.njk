<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Report - {{ projectTitle }}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        table { border-collapse: collapse; width: 100%; }
        th, td { text-align: left; padding: 8px; border-bottom: 1px solid #e5e7eb; font-size: 0.75rem; }
        th { background-color: #f3f4f6; font-weight: 700; }
        tr:hover { background-color: #f9fafb; }
        .chart-img { max-width: 100%; height: auto; display: block; }
        .brand { font-size: 1.1rem; font-weight: 600; color: #6366f1; letter-spacing: 1px; }
        
        /* Subtask styling */
        .subtask-row td:first-child {
            padding-left: 2.5rem;
            position: relative;
        }
        .subtask-row td:first-child::before {
            content: '└─';
            position: absolute;
            left: 1rem;
            color: #9ca3af;
            font-weight: normal;
        }
        .subtask-row {
            background-color: #f9fafb;
        }
        .subtask-row:hover {
            background-color: #f3f4f6;
        }
        .parent-task-row {
            font-weight: 500;
        }
    </style>
</head>
<body class="bg-gray-50 p-8">
    <div class="max-w-7xl mx-auto">
        <!-- Professional Header -->
        <header class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-4xl font-extrabold text-gray-900 mb-1">{{ projectTitle }}</h1>
                <p class="text-gray-600 text-lg mt-2">{{ projectDescription }}</p>
                <p class="text-gray-500 mt-1">Report Period: {{ reportPeriod }}</p>
                <p class="text-sm text-gray-400 mt-1">Owner: {{ owner.name }}</p>
            </div>
            <div class="brand">SPM Team 2</div>
        </header>

        <!-- Project KPIs -->
        <section class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Project Overview</h2>
            <div class="grid grid-cols-4 gap-4">
                <div class="bg-blue-50 p-4 rounded-lg shadow-sm">
                    <p class="text-gray-600 text-sm mb-1">Total Tasks</p>
                    <p class="text-2xl font-bold text-blue-600">{{ projectKPIs.totalTasks }}</p>
                </div>
                <div class="bg-green-50 p-4 rounded-lg shadow-sm">
                    <p class="text-gray-600 text-sm mb-1">Completed</p>
                    <p class="text-2xl font-bold text-green-600">{{ projectKPIs.completedTasks }}</p>
                </div>
                <div class="bg-purple-50 p-4 rounded-lg shadow-sm">
                    <p class="text-gray-600 text-sm mb-1">Team Members</p>
                    <p class="text-2xl font-bold text-purple-600">{{ projectKPIs.totalCollaborators }}</p>
                </div>
                <div class="bg-indigo-50 p-4 rounded-lg shadow-sm">
                    <p class="text-gray-600 text-sm mb-1">Completion Rate</p>
                    <p class="text-2xl font-bold text-indigo-600">{{ projectKPIs.completionRate }}%</p>
                </div>
            </div>
        </section>

        <!-- Charts Section -->
        <section class="grid grid-cols-2 gap-8 mb-8">
            <div class="bg-white rounded-lg shadow p-6">
                <h2 class="text-xl font-bold text-gray-900 mb-4">Task Status Distribution</h2>
                <img src="{{ charts.statusBar }}" alt="Status Distribution Chart" class="chart-img">
            </div>
            {% if charts.collaboratorPerformance %}
            <div class="bg-white rounded-lg shadow p-6">
                <h2 class="text-xl font-bold text-gray-900 mb-4">Top Contributors</h2>
                <img src="{{ charts.collaboratorPerformance }}" alt="Collaborator Performance Chart" class="chart-img">
            </div>
            {% endif %}
        </section>

        <!-- Collaborators Section -->
        <section class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Team Performance</h2>
            {% for collab in collaborators %}
            <div class="bg-white rounded-lg shadow p-6 mb-6">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <h3 class="text-xl font-bold text-gray-900">{{ collab.profile.name }}</h3>
                        <p class="text-sm text-gray-500">
                            {% if collab.profile.email %}{{ collab.profile.email }}{% endif %}
                            {% if collab.profile.dept %} • {{ collab.profile.dept }}{% endif %}
                        </p>
                    </div>
                    <div class="text-right">
                        <p class="text-2xl font-bold text-blue-600">{{ collab.kpis.total }}</p>
                        <p class="text-xs text-gray-500">Total Tasks</p>
                    </div>
                </div>
                
                <!-- Mini KPIs -->
                <div class="grid grid-cols-5 gap-2 mb-4">
                    <div class="text-center bg-green-50 p-2 rounded">
                        <p class="text-lg font-bold text-green-600">{{ collab.kpis.completed }}</p>
                        <p class="text-xs text-gray-500">Completed</p>
                    </div>
                    <div class="text-center bg-blue-50 p-2 rounded">
                        <p class="text-lg font-bold text-blue-600">{{ collab.kpis.ongoing }}</p>
                        <p class="text-xs text-gray-500">Ongoing</p>
                    </div>
                    <div class="text-center bg-yellow-50 p-2 rounded">
                        <p class="text-lg font-bold text-yellow-600">{{ collab.kpis.underReview }}</p>
                        <p class="text-xs text-gray-500">Review</p>
                    </div>
                    <div class="text-center bg-red-50 p-2 rounded">
                        <p class="text-lg font-bold text-red-600">{{ collab.kpis.overdue }}</p>
                        <p class="text-xs text-gray-500">Overdue</p>
                    </div>
                    <div class="text-center bg-orange-50 p-2 rounded">
                        <p class="text-lg font-bold text-orange-600">{{ collab.kpis.highPriority }}</p>
                        <p class="text-xs text-gray-500">High Pri</p>
                    </div>
                </div>
                
                <!-- Task List -->
                {% if collab.tasks.length > 0 %}
                <div class="overflow-x-auto">
                    <table class="min-w-full">
                        <thead>
                            <tr>
                                <th>Task</th>
                                <th>Status</th>
                                <th>Priority</th>
                                <th>Deadline</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for task in collab.tasks %}
                            {# Parent Task Row #}
                            <tr class="parent-task-row">
                                <td class="font-medium">{{ task.title }}</td>
                                <td>
                                    <span class="px-2 py-1 rounded text-xs
                                        {% if task.status == 'Completed' %}bg-green-100 text-green-800
                                        {% elif task.status == 'Ongoing' %}bg-blue-100 text-blue-800
                                        {% elif task.status == 'Under Review' %}bg-yellow-100 text-yellow-800
                                        {% elif task.status == 'Overdue' %}bg-red-100 text-red-800
                                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                                        {{ task.status }}
                                    </span>
                                </td>
                                <td>{{ task.priority }}</td>
                                <td>{{ task.deadline }}</td>
                                <td>
                                    <span class="text-xs
                                        {% if task.role == 'Owner' %}text-purple-600 font-semibold
                                        {% else %}text-gray-600{% endif %}">
                                        {{ task.role }}
                                    </span>
                                </td>
                            </tr>
                            
                            {# Subtask Rows #}
                            {% if task.subtasks and task.subtasks.length > 0 %}
                                {% for subtask in task.subtasks %}
                                <tr class="subtask-row">
                                    <td class="font-normal text-gray-700">{{ subtask.title }}</td>
                                    <td>
                                        <span class="px-2 py-1 rounded text-xs
                                            {% if subtask.status == 'Completed' %}bg-green-100 text-green-800
                                            {% elif subtask.status == 'Ongoing' %}bg-blue-100 text-blue-800
                                            {% elif subtask.status == 'Under Review' %}bg-yellow-100 text-yellow-800
                                            {% elif subtask.status == 'Overdue' %}bg-red-100 text-red-800
                                            {% else %}bg-gray-100 text-gray-800{% endif %}">
                                            {{ subtask.status }}
                                        </span>
                                    </td>
                                    <td>{{ subtask.priority }}</td>
                                    <td>{{ subtask.deadline }}</td>
                                    <td>
                                        <span class="text-xs
                                            {% if subtask.role == 'Owner' %}text-purple-600 font-semibold
                                            {% else %}text-gray-600{% endif %}">
                                            {{ subtask.role }}
                                        </span>
                                    </td>
                                </tr>
                                {% endfor %}
                            {% endif %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <p class="text-gray-400 text-sm text-center py-4">No tasks in this period</p>
                {% endif %}
            </div>
            {% endfor %}
        </section>

        <!-- Footer -->
        <footer class="text-center text-gray-400 text-sm mt-8 pt-4 border-t border-gray-200">
            <p>Generated by SPM Team 2 • {{ reportPeriod }}</p>
        </footer>
    </div>
</body>
</html>
