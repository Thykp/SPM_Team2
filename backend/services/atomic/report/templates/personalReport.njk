<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personal Task Report</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        table { border-collapse: collapse; width: 100%; }
        th, td { text-align: left; padding: 12px; border-bottom: 1px solid #e5e7eb; font-size: 0.85rem; }
        th { background-color: #f3f4f6; font-weight: 700; font-size: 0.85rem; }
        tr:hover { background-color: #f9fafb; }
        .chart-img { max-width: 100%; height: auto; display: block;}
        .brand { font-size: 1.1rem; font-weight: 600; color: #6366f1; letter-spacing: 1px; }
        .subtask-row { background-color: #f8fafc; border-left: 3px solid #e2e8f0; }
        .subtask-title { padding-left: 20px; color: #64748b; font-style: italic; }
        .subtask-icon { color: #94a3b8; margin-right: 8px; }
    </style>
</head>
<body class="bg-gray-50 p-8">
    <div class="max-w-7xl mx-auto">
        <!-- Professional Header -->
        <header class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-4xl font-extrabold text-gray-900 mb-1">Personal Task Report</h1>
                <p class="text-gray-500 text-lg">{{ reportPeriod }}</p>
            </div>
            <div class="brand">SPM Team 2</div>
        </header>

        <!-- Summary Section -->
        <section class="mb-8">
            <div class="grid grid-cols-3 gap-4">
                <div class="bg-blue-50 p-4 rounded-lg shadow-sm">
                    <p class="text-gray-600 text-sm mb-1">Total Tasks</p>
                    <p class="text-2xl font-bold text-blue-600">{{ kpis.totalTasks }}</p>
                </div>
                <div class="bg-green-50 p-4 rounded-lg shadow-sm">
                    <p class="text-gray-600 text-sm mb-1">Completed</p>
                    <p class="text-2xl font-bold text-green-600">{{ kpis.completedTasks }}</p>
                </div>
                <div class="bg-red-50 p-4 rounded-lg shadow-sm">
                    <p class="text-gray-600 text-sm mb-1">Overdue</p>
                    <p class="text-2xl font-bold text-red-600">{{ kpis.overdueTasks }}</p>
                </div>
                <div class="bg-orange-50 p-4 rounded-lg shadow-sm">
                    <p class="text-gray-600 text-sm mb-1">High Priority</p>
                    <p class="text-2xl font-bold text-orange-600">{{ kpis.highPriorityTasks }}</p>
                </div>
                <div class="bg-yellow-50 p-4 rounded-lg shadow-sm">
                    <p class="text-gray-600 text-sm mb-1">Under Review</p>
                    <p class="text-2xl font-bold text-yellow-600">{{ kpis.underReviewTasks }}</p>
                </div>
                <div class="bg-indigo-50 p-4 rounded-lg shadow-sm">
                    <p class="text-gray-600 text-sm mb-1">Ongoing</p>
                    <p class="text-2xl font-bold text-indigo-600">{{ kpis.ongoingTasks }}</p>
                </div>
            </div>
        </section>

        <!-- Charts Section -->
        <section class="grid grid-cols-2 gap-8 mb-8">
            <div class="bg-white rounded-lg shadow p-6">
                <h2 class="text-xl font-bold text-gray-900 mb-4">Status Distribution</h2>
                <img src="{{ charts.statusBar }}" alt="Status Distribution Chart" class="chart-img">
            </div>
            <div class="bg-white rounded-lg shadow p-6">
                <h2 class="text-xl font-bold text-gray-900 mb-4">Priority Distribution</h2>
                <img src="{{ charts.priorityPie }}" alt="Priority Distribution Chart" class="chart-img">
            </div>
        </section>

        <!-- Owner Tasks Table -->
        {% set ownerTasks = [] %}
        {% for task in tasks %}
            {% if task.role == 'Owner' %}
                {% set ownerTasks = (ownerTasks.push(task), ownerTasks) %}
            {% endif %}
        {% endfor %}
        {% if ownerTasks.length > 0 %}
        <section class="bg-white rounded-lg shadow p-6 mb-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Tasks I Own <span class="text-gray-400">({{ ownerTasks.length }})</span></h2>
            <div class="overflow-x-auto">
                <table class="min-w-full">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Deadline</th>
                            <th>Project</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for task in ownerTasks %}
                        <tr {% if task.isSubtask %}class="subtask-row"{% endif %}>
                            <td class="font-medium {% if task.isSubtask %}subtask-title{% endif %}">
                                {% if task.isSubtask %}
                                    <span class="subtask-icon">└─</span>
                                {% endif %}
                                {{ task.title }}
                            </td>
                            <td>
                                <span class="px-2 py-1 rounded text-xs font-semibold
                                    {% if task.status == 'Completed' %}bg-green-100 text-green-800
                                    {% elif task.status == 'Ongoing' %}bg-blue-100 text-blue-800
                                    {% elif task.status == 'Overdue' %}bg-red-100 text-red-800
                                    {% elif task.status == 'Under Review' %}bg-yellow-100 text-yellow-800
                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                    {{ task.status }}
                                </span>
                            </td>
                            <td>
                                <span class="px-2 py-1 rounded text-xs font-semibold
                                    {% if task.priority >= 8 %}bg-red-100 text-red-800
                                    {% elif task.priority >= 4 %}bg-yellow-100 text-yellow-800
                                    {% else %}bg-green-100 text-green-800{% endif %}">
                                    {{ task.priority }}
                                </span>
                            </td>
                            <td>{{ task.deadline }}</td>
                            <td>
                                {% if task.projectName %}
                                    <span class="text-gray-900">{{ task.projectName }}</span>
                                {% else %}
                                    <span class="text-gray-400 font-light">No Project</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% endif %}

        <!-- Collaborator Tasks Table -->
        {% set collaboratorTasks = [] %}
        {% for task in tasks %}
            {% if task.role == 'Collaborator' %}
                {% set collaboratorTasks = (collaboratorTasks.push(task), collaboratorTasks) %}
            {% endif %}
        {% endfor %}
        
        {% if collaboratorTasks.length > 0 %}
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Tasks I'm Collaborating On ({{ collaboratorTasks.length }})</h2>
            <div class="overflow-x-auto">
                <table class="min-w-full">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Deadline</th>
                            <th>Project</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for task in collaboratorTasks %}
                        <tr {% if task.isSubtask %}class="subtask-row"{% endif %}>
                            <td class="font-medium {% if task.isSubtask %}subtask-title{% endif %}">
                                {% if task.isSubtask %}
                                    <span class="subtask-icon">└─</span>
                                {% endif %}
                                {{ task.title }}
                            </td>
                            <td>
                                <span class="px-2 py-1 rounded text-xs font-semibold
                                    {% if task.status == 'Completed' %}bg-green-100 text-green-800
                                    {% elif task.status == 'Ongoing' %}bg-blue-100 text-blue-800
                                    {% elif task.status == 'Overdue' %}bg-red-100 text-red-800
                                    {% elif task.status == 'Under Review' %}bg-yellow-100 text-yellow-800
                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                    {{ task.status }}
                                </span>
                            </td>
                            <td>
                                <span class="px-2 py-1 rounded text-xs font-semibold
                                    {% if task.priority >= 8 %}bg-red-100 text-red-800
                                    {% elif task.priority >= 4 %}bg-yellow-100 text-yellow-800
                                    {% else %}bg-green-100 text-green-800{% endif %}">
                                    {{ task.priority }}
                                </span>
                            </td>
                            <td>{{ task.deadline }}</td>
                            <td>
                                {% if task.projectName %}
                                    <span class="text-gray-900">{{ task.projectName }}</span>
                                {% else %}
                                    <span class="text-gray-400 font-light">No Project</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% endif %}
    </div>
</body>
</html>
